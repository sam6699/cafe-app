<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabIndicatorColor="@color/cardview_light_background"
                    app:tabMode="scrollable"
                    app:tabTextColor="@color/cardview_light_background">

                        <android.support.design.widget.TabItem
                            android:id="@+id/tabFood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ovqat" />

                        <android.support.design.widget.TabItem
                            android:id="@+id/tabDrink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ichimlik" />

                        <android.support.design.widget.TabItem
                            android:id="@+id/tabSalad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/salat" />

                        <android.support.design.widget.TabItem
                            android:id="@+id/tabCake"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shirinlik" />

                </android.support.design.widget.TabLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/fillView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
